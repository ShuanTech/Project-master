<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/shred"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/small_margin">

            <ImageView
                android:id="@+id/frm_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/small_margin"
                android:scaleType="fitXY"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/shr_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:alpha="0.8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Nazim Shared Shuan Tech's Post"
                android:textColor="#000" />

            <TextView
                android:id="@+id/fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shred"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin">

            <android.support.v7.widget.CardView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="#f0f0f0"
                app:cardCornerRadius="@dimen/small_margin"
                app:cardElevation="@dimen/small_margin">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:id="@+id/des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/cmpny_logo"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:padding="2dp"
                            android:src="@drawable/logo" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/standard_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_toRightOf="@+id/cmpny_logo">

                            <TextView
                                android:id="@+id/cmpny_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_marginRight="@dimen/standard_margin"
                                android:layout_marginTop="@dimen/small_margin"
                                android:gravity="left"
                                android:text=""
                                android:textAppearance="?android:textAppearanceMedium"
                                android:textColor="#000" />

                            <TextView
                                android:id="@+id/created"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/cmpny_name"
                                android:layout_marginBottom="@dimen/small_margin"
                                android:layout_marginLeft="@dimen/standard_margin"
                                android:layout_marginTop="2dp"
                                android:text=""
                                android:textColor="#000" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/des"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:gravity="left"
                        android:text=""
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#333" />

                    <LinearLayout
                        android:id="@+id/lay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:text="Skills Required :" />

                        <TextView
                            android:id="@+id/skill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:lines="1"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay2"
                        android:layout_marginBottom="@dimen/standard_margin"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginRight="@dimen/standard_margin"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/exp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/but_round"
                                android:padding="@dimen/standard_margin"
                                android:src="@drawable/ic_work" />

                            <TextView
                                android:id="@+id/level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/small_margin"
                                android:layout_toRightOf="@+id/img1"
                                android:text=""
                                android:textColor="#333"
                                android:textStyle="bold" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/loc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/but_round"
                                android:padding="@dimen/standard_margin"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/locate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/small_margin"
                                android:layout_toRightOf="@+id/img3"
                                android:text=""
                                android:textColor="#333"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/root"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/comment" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:text="" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/resume_upload" />

                    <TextView
                        android:id="@+id/applied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:text="" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.7"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/shared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/small_margin"
                        android:text="" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imprtnt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.7"
                    android:src="@drawable/ic_important" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/jId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/frm_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:alpha="0.4"
        android:background="#000" />


</RelativeLayout>