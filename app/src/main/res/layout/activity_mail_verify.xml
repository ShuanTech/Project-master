<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mail_verify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/senPrimary"
    tools:context="com.shuan.Project.signup.MailVerify">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#dadada"
                app:cardCornerRadius="@dimen/small_margin"
                app:cardElevation="@dimen/small_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/cmpny_logo"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/standard_margin"
                            android:background="@drawable/job_post"
                            android:elevation="@dimen/standard_margin"
                            android:padding="2dp"
                            android:src="@drawable/logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@id/cmpny_logo"
                            android:text="Verify your Phone number "
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="#000"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/head">
                        <EditText
                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:hint="Enter OTP received "
                            android:inputType="number" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content"
                        android:paddingBottom="8dp">

                        <Button
                            android:id="@+id/resend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resend"
                            android:layout_marginStart="10dp"
                            android:background="#dadada"
                            android:layout_marginLeft="10dp" />
                        <Button
                            android:id="@+id/verify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="22dp"
                            android:layout_marginRight="22dp"
                            android:background="@color/colorAccent"
                            android:text="verify" />

                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>


